<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>Text Messages</title>
        <link rel="stylesheet" href="/static/spectre.min.css" />
    </head>
    <body>
        <div class="container">
            <div class="columns">
                <div class="column col-12">
                    <dl>
                        {% for message in messages %}
                            <dt>Message from {{ message.from_number }} to {{ message.to_number }} at {{ message.received_at }}:</dt>
                            <dd>{{ message.body }}</dd>
                        {% endfor %}
                    </dl>
                </div>
            </div>
        </div>

        <script src="/static/moment.min.js"></script>
        <script src="/static/moment-timezone-with-data-1970-2030.min.js"></script>
        <script>
            const elements = document.getElementsByClassName('datetime');

            for (const element of elements) {
                element.textContent = moment(element.textContent).tz('America/Toronto').format('MMMM Do YYYY, h:mm:ss A');
            }
        </script>
    </body>
</html>
